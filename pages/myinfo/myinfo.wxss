page {
  width: 100%;
  height: 100%;
  background: #f7f7fa;
}

.my-info-content {
  width: 100%;
  height: 92%;
}

.user-head-view {
  width: 100%;
  height: 220rpx;
  background-color: #ffe62b;
  position: relative;
}

.login-btn {
  width: 50%;
  height: 220rpx;
  line-height: 220rpx;
  position: absolute;
  left: 25%;
  top: 0;
  font-size: 12pt;
  color: #fff;
  z-index: 10;
  background: rgba(255, 255, 255, 0);
}

.no-login-txt {
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  position: absolute;
  left: 230rpx;
  top: 130rpx;
  z-index: 11;
  font-size: 12pt;
  text-align: center;
  color: #333;
}

.login-btn::after{
  border: 0;
}

.my-keep-view {
  width: 100%;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #ddd;
  position: relative;
}

.keep-left {
  height: 110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left: 35rpx;
}

.my-keep-img {
  width: 58rpx;
  height: 60rpx;
  margin-top: 3rpx;
}

.keep-txt {
  height: 60rpx;
  line-height: 60rpx;
  color: #000;
  font-size: 12pt;
  margin-left: 25rpx;
}

.right-icon {
  width: 45rpx;
  height: 45rpx;
  margin-right: 35rpx;
}

.kefu-view {
  width: 100%;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
  position: relative;
}

.mykepp-btn{
  width: 100%;
  height: 110rpx;
  background: rgba(255, 255, 255, 0);
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
}

.mykepp-btn::after{
  border: 0;
}

.kefu-btn{
  width: 100%;
  height: 110rpx;
  background: rgba(255, 255, 255, 0);
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
}

.kefu-btn::after{
  border: 0;
}


.user-head-wrapper {
  width: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 35rpx;
  left: 335rpx;
}

.user-head {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #fff;
  position: absolute;
}

.nick-name {
  width: 400rpx;
  margin-top: 5rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
}

.is-vip-img {
  width: 91rpx;
  height: 70rpx;
  position:relative;
  z-index: 2;
  top: 50rpx;
}