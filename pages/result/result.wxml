
<view class='result-view'>
    <image mode='widthFix' src='{{result_img}}' style='width:{{swidth}}rpx;height:{{sheight}}rpx' class='result-image' bindtap='preimage'></image>
</view>
<view class="result-opera-view">
  <button class='share_button' bindtap='shareImage' hover-class='share-hover' open-type='share'>邀请朋友玩</button>
  <button class='save_button' bindtap='preimage' hover-class='save-hover'>保存到相册</button>
</view>

<view class="show_tip" data-statu="close" wx:if="{{showModalStatus}}" bindtap='powerShow'>
    <view class='show-content'><image src='../image/touch_save_icon.png' class='touch-image'></image></view>
    <view class='show-content'><text>点击预览图片，长按发送给好友</text></view>
    <view class='show-content-end'><button class='ikonw' bindtap='powerShow'>知道了</button></view>
</view>